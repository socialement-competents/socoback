{
  "name": "backathon",
  "version": "1.0.0",
  "description": "Node backend to win the EPSI 2018 Hackaton",
  "main": "src/index.ts",
  "scripts": {
    "prod": "NODE_ENV=production pm2 start build/bundle.js",
    "start": "npm run build && npm-run-all --parallel watch:build watch:server",
    "watch:server": "nodemon \"./build/bundle.js\" --watch \"./build\" ",
    "watch:build": "webpack --watch",
    "build": "webpack --display-error-details",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:ci": "jest --coverage --forceExit --testResultsProcessor=jest-junit --ci --verbose",
    "unit": "jest --watchAll",
    "ccov": "codecov -f coverage/coverage-final.json -t $CODECOV_TOKEN",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write 'webpack.config.js' 'src/**/*.{js,ts}'",
    "prettier-check": "prettier -l --config .prettierrc 'webpack.config.js' 'src/**/*.{js,ts}'"
  },
  "repository": {
    "type": "git"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.15.0",
    "cors": "2.7.1",
