    "express-graphql": "0.6.11",
    "express-jwt": "3.3.0",
    "express-session": "1.13.0",
    "express-status-monitor": "1.0.1",
    "graphql": "0.12.3",
    "jsonwebtoken": "7.1.9",
    "method-override": "2.3.5",
    "methods": "1.1.2",
    "mongoose": "4.4.10",
    "mongoose-unique-validator": "1.0.2",
    "morgan": "1.7.0",
    "multer": "1.3.0",
    "nodemailer": "4.6.4",
    "passport": "0.3.2",
    "passport-local": "1.0.0",
    "request": "2.69.0",
    "slug": "0.9.1",
    "socket.io": "2.1.0",
    "underscore": "1.8.3"
  },
